<p></p>

<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @friends && !@friends.empty? %>
  <div class="card bg-light mb-3 card-body results-block">
    <table class="col-md-12">
      <tbody>
  
        <% @friends.each do |friend| %>
          <tr>
            <td><strong>Name: </strong> <%= friend.full_name %></td>
            <td><strong>Email: </strong> <%= friend.email %></td>
            <td>
              <strong>Actions: </strong> 
              <%= link_to 'View Profile', user_path(friend), class: "btn btn-sm btn-success" %>
              <% if !current_user.friends.include?(friend) %>
                <%= link_to 'Follow', friendships_path(id: friend), class: "btn btn-sm btn-success", method: :post %>
              <% else %>
                <span class="btn btn-secondary badge">You are already friends</span>
              <% end %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>
  </div>
<% end %>